{
  "name": "gitx.do",
  "version": "0.1.1",
  "description": "Git on Cloudflare Durable Objects - A complete git reimplementation for the edge",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./do": {
      "types": "./dist/do/index.d.ts",
      "import": "./dist/do/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "git",
    "cloudflare",
    "durable-objects",
    "edge",
    "mcp",
    "ai"
  ],
  "author": "dot-do",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dot-do/gitx.git",
    "directory": "packages/do"
  },
  "homepage": "https://github.com/dot-do/gitx#readme",
  "bugs": {
    "url": "https://github.com/dot-do/gitx/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@dotdo/gitx": "workspace:*",
    "hono": "^4.11.3",
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.1",
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/pako": "^2.0.4",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.99.0"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": "^4.0.0"
  }
}
