{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "composite": true
  },
  "include": [
    "index.ts",
    "types.ts",
    "objects/**/*.ts",
    "pack/**/*.ts",
    "refs/**/*.ts",
    "protocol/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
